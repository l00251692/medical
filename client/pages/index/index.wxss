@import '../../styles/loading.wxss';

::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}

.background {
  position: fixed;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
  display: flex;
  flex: 1;
  z-index: -1;
}

.background image{
  width:100%;
  height:100%;
}

.main{
  display: flex;
  flex-direction: column;
  height: 100%;
  width: 100%;
}

.title{
  margin-top:200rpx;
  width: 100%;
  text-align: center;
  height: 100rpx;
}

.title text{
  line-height: 60rpx;
  font-size: 46rpx;
  padding-top: 20rpx;
  padding-bottom: 20rpx;
  color: #fff;
  font-weight:bold;
}

.content{
  text-align: left;
  margin-left:30rpx;
  margin-right:30rpx;
}

.content_head{
  line-height: 60rpx;
  font-size: 32rpx;
  font-weight: bold;
  color: #fff;
}

.content_text{
  line-height: 60rpx;
  font-size: 32rpx;
  font-weight: bold;
  color: #fff;
}

.foot {
  width: 100%;
  margin-top: 60rpx;
}

.checkbox{
  position: relative;
  margin-left: 30rpx;
  height: 80rpx;
}

.xieyi{
  line-height: 80rpx;
  font-size: 32rpx;
  font-weight: bold;
  color: #fff;
}

.create-btn {
  margin-top: 20rpx;
  height: 90rpx;
  background-color: #6495ed;
  color: #fff;
  font-size: 40rpx;
  font-weight: bold;
  line-height: 90rpx;
  border-radius:10rpx;
}

