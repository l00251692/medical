@import '../../styles/loading.wxss';

::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}

page {
  width: 100%;
  height: 100vh;
}

.background {
  width:100%;
  height: 100%;
}

.background image{
  position: fix;
  width:100%;
  height:100vh;
}

.main{
  display: flex;
  flex-direction: column;
  position: fixed;
  height: 100%;
  width: 100%;
  top: 0;
}

.title{
  margin-top:20rpx;
  width: 100%;
  text-align: center;
  height: 100rpx;
}

.title text{
  line-height: 60rpx;
  font-size: 46rpx;
  padding-top: 20rpx;
  padding-bottom: 20rpx;
  color: #fff;
}

.content{
  text-align: left;
  margin-left:30rpx;
  margin-right:30rpx;
  text-indent: 20rpx;
}

.content_head{
  line-height: 60rpx;
  font-size: 34rpx;
  font-weight: bold;
  opacity: 1.2;
  color: #fff;
}

.content_text{
  line-height: 50rpx;
  font-size: 32rpx;
  color: #fff;
}

.foot {
  width: 100%;
}




.checkbox{
  position: relative;
  margin-top: 60rpx;
  margin-left: 30rpx;
}

.xieyi{
  line-height: 52rpx;
  font-size: 32rpx;
  padding-bottom: 10rpx;
  font-weight: bold;
  opacity: 0.8;
}

.create-btn {
  margin-top: 20rpx;
  height: 90rpx;
  background-color: #6495ed;
  color: #fff;
  border-radius:20rpx;
}

