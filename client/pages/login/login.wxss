.container{
    display: flex;
    flex-direction: column;
    align-items:center;
}

.user-avatar{
    width:200rpx;
    height:200rpx;
    margin-top: 100px;
    border-radius: 50%;
}

.user-name{
    font-size: 32rpx;
    font-weight: bold;
    color:#fff;
    line-height: 40rpx;
}


.userbutton{
    height: 70rpx;
    width:300rpx;
    border: 1rpx #6495ed solid;
    text-align: center;
    border-radius: 5rpx;
    position: fixed;
    bottom: 300rpx;
}

.userbutton button{
  width: 100%;
  height: 100%;
}

.userbutton button::after{
  border: none;
}

.moto{
    font-size: 32rpx;
    font-weight: bold;
    line-height: 70rpx;
    color: #6495ed;
}

page{
    height: 100%;
    background-color: #6495ed;
}